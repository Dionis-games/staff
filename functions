function d {  iptables -I INPUT -j DROP ;
              iptables -I OUTPUT -j DROP ;
                echo 1 > /var/run/drop.pid;
                s;
}
export -f d
function a {  iptables -I INPUT -j ACCEPT ;
              iptables -I OUTPUT -j ACCEPT ;
                echo 0 > /var/run/drop.pid;
                s;
}
export -f a
function s {
                CAS=$(cat /var/run/drop.pid);
                case $CAS in
                "0") echo "ACCEPT";;
                "1") echo "DROP";;
                esac;
}
export -f s

