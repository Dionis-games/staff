
function лог { 
		case $@ in
		"") cat ~/.тезаурус | grep $(date +%F) ;; 
                "todo") #grep ${@/"todo" | grep $(date +%F)}  ~/.тезаурус ;;
                   	grep "todo" ~/.тезаурус ;;
			#esac
		*) case $1 in 
		   "найти") grep ${@/"найти"}  ~/.тезаурус ;;
		   *) echo $(date +%F) $(date +%T) $@ >> ~/.тезаурус ;;
		   esac
		esac
		}
export -f лог 


